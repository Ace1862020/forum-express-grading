<h1>Top 10 人氣餐廳</h1>
<hr />

{{#each restaurants}}
<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <a href="/restaurants/{{this.id}}">
        <img src="{{this.image}}" class="card-img" alt="{{this.name}}">
      </a>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text"><small class="text-muted">{{this.Category.name}}</small></p>
        <p class="card-text">{{this.description}}</p>
        <span class="badge badge-secondary">追蹤人數：{{this.favoritedCount}}</span>

        <div class="d-flex justify-content-start mt-2">
          <a href="/restaurants/{{this.id}}" class="btn btn-primary">show</a>
          {{#if this.isFavorited }}
          <form action="/following/{{this.id}}?_method=DELETE" method="POST" style="display: contents;"><button
              type="submit" class="btn btn-danger ml-2">取消追蹤</button></form>
          {{else}}
          <form action="/following/{{this.id}}" method="POST" style="display: contents;"><button type="submit"
              class="btn btn-primary ml-2">追蹤</button></form>
          {{/if}}
        </div>

      </div>
    </div>
  </div>
</div>
{{/each}}